@model List<Movie>

@{
    ViewData["Title"] = "All movies";
}

<a asp-controller="Movies" asp-action="Create">Add new movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Edit</a>
                    <!-- add 1 pixel margin on the left and right (i.e. x dirn) of the | -->
                    <span class="mx-1">|</span>
                    <a asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
